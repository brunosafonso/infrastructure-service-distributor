{
	"id": "/infrastructure-service-distributor-layer4",
	"instances": 1,
	"cpus": 0.5,
	"disk": 200,
	"mem": 256,
	"networks": [
		{
			"mode": "container/bridge"
		}
	],
	"container": {
		"portMappings": [
			{
				"containerPort": 80,
				"hostPort": 80
			},
			{
				"containerPort": 443,
				"hostPort": 443
			}
		],
		"type": "DOCKER",
		"volumes": [
			{
				"containerPath": "/usr/local/apache2/conf/vhost",
				"mode": "RW",
				"external": {
					"name": "infrastructure-service-distributor-layer4",
					"provider": "dvdi",
					"options": {
						"dvdi/driver": "rexray"
					}
				}
			},
			{
				"containerPath": "/etc/letsencrypt",
				"mode": "RW",
				"external": {
					"name": "infrastructure-service-distributor-cert",
					"provider": "dvdi",
					"options": {
						"dvdi/driver": "rexray"
					}
				}
			}
		],
		"docker": {
			"image": "coldis/infrastructure-service-distributor-layer4",
			"forcePullImage": true
		}
	},
	"env": {
		"HOSTNAME": "coldis.org",
		"INTRANET_IP": "127.0.0.1"
	},
	"healthChecks": [],
	"args": [],
	"acceptedResourceRoles": [
		"slave_public"
	],
	"upgradeStrategy": {
		"minimumHealthCapacity": 0,
		"maximumOverCapacity": 0
	}
}
